{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "fd"
     "neovim"
     "node"
     "ripgrep"
     "starship"
     "tmux" -}}

{{ $casks := list
     "alacritty" -}}

{{ if .personal -}}
{{   $brews = concat $brews (list
       "elixir"
       "exercism") -}}
{{ end -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
{{ end -}}
