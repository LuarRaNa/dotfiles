{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "chezmoi"
     "fd"
     "gitui"
     "lazygit"
     "nushell"
     "ripgrep"
	 "starship" -}}

{{ $casks := list
	 "alacritty"
     "wezterm" -}}

{{ if .personal -}}
{{   $brews = concat $brews (list
       "elixir"
       "exercism"
       "podman") -}}
{{ end -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
{{ end -}}
