{
  // General Editor Behavior
  "auto_update": false,
  "restore_on_startup": "none",
  "format_on_save": "off",
  "preferred_line_length": 100,
  "wrap_guides": [80, 100, 120],
  "show_whitespaces": "selection",

  // Font & Layout
  "ui_font_size": 14,
  "ui_font_family": "Iosevka Custom",
  "buffer_font_size": 14,
  "buffer_font_family": "Iosevka Custom",
  "buffer_line_height": {
    "custom": 1.5
  },

  // Layout & Panels
  "centered_layout": {
    "left_padding": 0.22,
    "right_padding": 0.22
  },
  "bottom_dock_layout": "full",
  "project_panel": {
    "default_width": 500,
    "dock": "left",
    "indent_size": 10,
    "auto_reveal_entries": true
  },
  "outline_panel": {
    "default_width": 500,
    "dock": "left",
    "indent_size": 10
  },
  "git_panel": {
    "default_width": 500,
    "dock": "left"
  },
  "tabs": {
    "git_status": true
  },
  "tab_bar": {
    "show": false
  },

  // Editor UI
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 3,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "gutter": {
    "line_numbers": false
  },
  "scrollbar": {
    "show": "always"
  },

  // Terminal
  "terminal": {
    "dock": "bottom",
    "default_height": 900,
    "line_height": {
      "custom": 1.5
    }
  },

  // Agent/AI
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_width": 500,
    "dock": "left"
  },

  // Features
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Vim Mode
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": false
  },

  // Inlay Hints
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },

  // File Finder
  "file_finder": {
    "file_icons": true,
    "modal_max_width": "large"
  },

  // Language-specific Settings
  "languages": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  }
}
