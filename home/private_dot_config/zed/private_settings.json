{
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "auto_update": false,
  "restore_on_startup": "none",
  "format_on_save": "off",
  "vim_mode": true,
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "wrap_guides": [80, 100, 120],
  "show_whitespaces": "all",
  "ui_font_size": 14,
  "ui_font_family": "Iosevka Custom",
  "buffer_font_size": 14,
  "buffer_font_family": "Iosevka Custom",
  "buffer_line_height": {
    "custom": 1
  },
  "centered_layout": {
    "left_padding": 0.22,
    "right_padding": 0.22
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 3,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "gutter": {
    "line_numbers": false
  },
  "scrollbar": {
    "show": "always"
  },
  "terminal": {
    "default_height": 880,
    "shell": {
      "with_arguments": {
        "program": "/opt/homebrew/bin/nu",
        "args": ["-l"]
      }
    },
    "line_height": {
      "custom": 1
    }
  },
  "project_panel": {
    "default_width": 650,
    "dock": "left",
    "indent_size": 10,
    "auto_reveal_entries": true
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2",
    "default_width": 650,
    "dock": "left"
  },
  "outline_panel": {
    "default_width": 650,
    "dock": "left",
    "indent_size": 10
  },
  "tabs": {
    "git_status": true
  },
  "tab_bar": {
    "show": false
  },
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": false
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "file_finder": {
    "file_icons": true,
    "modal_max_width": "large"
  },
  "languages": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  }
}
