{
  // General Editor Behavior
  "auto_update": false,
  "restore_on_startup": "none",
  "format_on_save": "off",
  "vim_mode": true,

  // Font & Typography
  "ui_font_size": 14.0,
  "ui_font_family": "Iosevka Custom",
  "buffer_font_size": 12.0,
  "buffer_font_family": "Iosevka Custom",
  "buffer_font_weight": 400.0,
  "buffer_line_height": {
    "custom": 1.5
  },

  // Editor Display (Visuals)
  "theme": {
    "mode": "system",
    "light": "Dracula Light (Alucard)",
    "dark": "Dracula"
  },
  "preferred_line_length": 100,
  "wrap_guides": [80, 100, 120],
  "show_whitespaces": "selection",
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 3,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "gutter": {
    "line_numbers": false
  },
  "scrollbar": {
    "show": "always"
  },
  "sticky_scroll": {
    "enabled": true
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },

  // Layout & Panels
  "centered_layout": {
    "left_padding": 0.22,
    "right_padding": 0.22
  },
  "bottom_dock_layout": "full",
  "tab_bar": {
    "show": false
  },
  "tabs": {
    "git_status": true
  },
  "project_panel": {
    "default_width": 500,
    "dock": "left",
    "indent_size": 10,
    "auto_reveal_entries": true,
    "sort_mode": "mixed"
  },
  "outline_panel": {
    "default_width": 500,
    "dock": "left",
    "indent_size": 10
  },
  "git_panel": {
    "default_width": 500,
    "dock": "left"
  },

  // Terminal
  "terminal": {
    "dock": "bottom",
    "default_height": 320,
    "line_height": {
      "custom": 1.5
    }
  },

  // Agent/AI
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "default_width": 500,
    "default_height": 320,
    "dock": "bottom"
  },
  "agent_buffer_font_size": 12.0,
  "agent_ui_font_size": 14.0,
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Vim Specifics
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": false
  },

  // File Finder
  "file_finder": {
    "file_icons": true,
    "modal_max_width": "large"
  },

  // Language-specific Settings
  "languages": {
    "Elixir": {
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": [
            "format",
            "--stdin-filename",
            "{buffer_path}",
            "-"
          ]
        }
      },
      "format_on_save": "on"
    }
  }
}
